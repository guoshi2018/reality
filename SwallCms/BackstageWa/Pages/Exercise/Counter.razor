@page "/exercise/counter"
@attribute [NavItemFlag(
     Enabled = true,
     Icon = "oi-beaker",
     IconAtRear = false,
     LinkTo = "/exercise/counter",
     Text = "counter",
     Tooltip = ""
)]

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary w-100" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        var datas = typeof(Counter).CustomAttributes;
        if (datas != null)
        {
            foreach (var d in datas)
            {
                Console.WriteLine(d);
            }
        }
        //Console.WriteLine(datas);

    }
}
