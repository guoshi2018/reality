        //{"IsStaging",HostEnv.IsStaging().ToString()},
        //{"IsEnvironment(\"custom\")",HostEnv.IsEnvironment("custom").ToString()}
        //};
        Dictionary<string, string> envInfos = new Dictionary<string, string>
            {

                ["BaseAddress"] = HostEnv.BaseAddress,
                ["Environment"] = HostEnv.Environment,
                ["IsDevelopment"] = HostEnv.IsDevelopment().ToString(),
                ["IsProduction"] = HostEnv.IsProduction().ToString(),
                ["IsStaging"] = HostEnv.IsStaging().ToString(),
                ["IsEnvironment(\"custom\")"] = HostEnv.IsEnvironment("custom").ToString(),
            };
    }
    <form class="container">
        @foreach (KeyValuePair<string, string> item in envInfos)
        {
            <div class="row input-group mb-3">
                <label class="col-7 text-end">@item.Key</label>
                <input type="text" class="form-control" readonly value="@item.Value" />
            </div>
        }
    </form>


</details>
