@inject IWebAssemblyHostEnvironment HostEnv

<details open>
    <summary>
        Environment example
    </summary>
    @{
        // 两种初始值设定方式, 但是发现无法混合使用
        //    Dictionary<string, string> envInfos = new Dictionary<string, string>{
        //{"BaseAddress",HostEnv.BaseAddress },
